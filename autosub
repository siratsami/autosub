#!/bin/bash

echo ""
echo " AutoSub By B4GG3R Twitter: siratsami71"
echo ""
echo " Doing Basic Recon For $1"
mkdir $1
assetfinder -subs-only $1 >> $1/1
echo " assetfinder done"
subzero $1 | grep $1 | grep -v ':' >> $1/1
echo " subzero done"
subfinder -d $1 -silent >> $1/1
echo " subfinder done"
findomain -t $1 -q >> $1/1
echo " findomain done"
waybackurls $1 | awk -F'://' '{print $2}' | awk -F'/' '{print $1}' | awk -F':' '{print $1}' | sort -u >> $1/1
echo " waybackurls done"
cat $1/1 | grep $1 | grep -v ' ' | sort -u >> $1/$1_autosub
rm $1/1
cat $1/$1_autosub | httpx -silent -status-code -content-length -location -cname -path '/' -follow-redirects -no-color >> $1/$1_httpx
echo " httpx done"
